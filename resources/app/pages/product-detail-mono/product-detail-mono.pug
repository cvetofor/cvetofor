                .product-detail__composition-content
                  .composition-item
                    .composition-item__color(style="background-color: #DF0000;")
                    span.composition-item__title красные
                    span.composition-item__quantity 5 шт.,
                  .composition-item
                    .composition-item__color(style="background-color: #FF5099;")
                    span.composition-item__title розовые
                    span.composition-item__quantity 3 шт.,
                  .composition-item
                    .composition-item__color(style="background-color: #FFFFFF;")
                    span.composition-item__title белые
                    span.composition-item__quantity 6 шт.,
                  .composition-item
                    .composition-item__color(style="background-color: #FF9900;")
                    span.composition-item__title оранжевые
                    span.composition-item__quantity 3 шт.,
                button.link-button.change-composition-button(data-modal-open="change-composition-mono")
                  span.link-button__title Изменить состав букета
                  svg.link-button__icon
                    use(href="#icon-gear")
                include /blocks/modal/modal--change-composition-mono
