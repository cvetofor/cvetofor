
include /blocks/components/counter/counter

.modal(data-modal="change-composition-mono")
  .modal__heading
    .modal__title
      span Изменить состав
    .modal__close(data-modal-close="")
  .modal__container
    .fields
      .counter__wrap.counter__wrap--composition
        .counter__color(style="background-color: #DF0000;")
        span.counter__title Красные
        +counter({
          value: 5
        })
      .counter__wrap.counter__wrap--composition
        .counter__color(style="background-color: #FF5099;")
        span.counter__title Розовые
        +counter({
          value: 3
        })
      .counter__wrap.counter__wrap--composition
        .counter__color(style="background-color: #FFFFFF;")
        span.counter__title Белые
        +counter({
          value: 9
        })
      .counter__wrap.counter__wrap--composition
        .counter__color(style="background-color: #FF9900;")
        span.counter__title Оранжевые
        +counter({
          value: 0
        })
    .modal__total
      span.modal__total-title Итого
      .modal__total-price__wrap
        span.modal__total-price 3000 р.
    .buttonholder
      button.button.button--green.button--full-width.apply-button(disabled) Применить
